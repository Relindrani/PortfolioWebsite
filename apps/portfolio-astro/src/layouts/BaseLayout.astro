---
import "../styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Brandon Bixler â€” Software Engineer",
  description = "Software engineer focused on backend systems, distributed services, and cloud infrastructure.",
} = Astro.props;

const page = Astro.props.page ?? "default";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- SEO / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />
    <script>
      if ("scrollRestoration" in history) {
        history.scrollRestoration = "manual";
        window.scrollTo(0, 0);
      }

      if ("IntersectionObserver" in window) {
        const lazySections = document.querySelectorAll("[data-lazy]");

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
                observer.unobserve(entry.target);
              }
            });
          },
          {
            threshold: 0.15,
          },
        );

        lazySections.forEach((section) => observer.observe(section));

        document.querySelectorAll("[data-animate]").forEach((el) => {
          observer.observe(el);
        });
      }
    </script></head
  >

  <body class={`page-${page}`}>
    <div id="page-loader" aria-hidden="true">
      <div class="loader-ring"></div>
    </div>

    <Header />

    <main class="container">
      <slot />
    </main>

    <Footer />

    <script>
      window.addEventListener("load", () => {
        setTimeout(() => {
          document.body.classList.add("loaded");
          document.getElementById("page-loader")?.classList.add("hidden");
        }, 150);
      });
    </script>
  </body>
</html>
